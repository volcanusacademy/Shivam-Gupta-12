//Write a program in C to check whether the number is prime or not? take input from user use if else
#include <stdio.h>

int main() {
    int a, i, Prime = 1;

    printf("Enter a number: ");
    scanf("%d", &a);

    
    if (a <= 1) {
        Prime = 0;
    } else {
        for (i = 2; i <= a / 2; i++) {
            if (a % i == 0) {
                Prime = 0;
                break;
            }
        }
    }

    if (Prime) {
        printf("%d is a prime number.", a);
    } else {
        printf("%d is not a prime number.", a);
    }

    return 0;
}