//Write a program that accepts 6 digit number and find out the sum of first and last digit

#include<stdio.h>

int main() {
    int number;
    printf("Enter a 6-digit number: ");
    scanf("%d", &number);

    
    int firstDigit = number / 100000; 
    int lastDigit = number % 10;       

    
    int sum = firstDigit + lastDigit;

    printf("Sum of first and last digits: %d\n", sum);

    return 0;
}